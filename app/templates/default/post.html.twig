{% extends 'template.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="post">
        <h2>{{ post.title }}</h2>
        <div class="tags">
            {% for tag in post.tags %}
                <a href="/tags/{{ tag.slug ~ '.html' }}">{{ tag.name }}</a>
            {% endfor %}
        </div>
        <div>{{ body | raw }}</div>
    </div>
{% endblock %}
