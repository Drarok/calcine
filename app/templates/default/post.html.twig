<div class="blog-post">
    {% if link is defined and link %}
        <h3><a href="/{{ post.date|date('Y/m/d') ~ '/' ~ post.slug ~ '.html' }}">{{ post.title }}</a></h3>
    {% else %}
        <h3>{{ post.title }}</h3>
    {% endif %}
    <time datetime="{{ post.date|date(constant('DATE_RFC3339')) }}">{{ post.date|date('F dS, Y') }}</time>
    <div class="blog-post-tags">

    <div class="blog-post-tags">
        {% if tags %}
            {% for tag in post.tags %}
                <a href="/tags/{{ tag.slug ~ '.html' }}">{{ tag.name }}</a>
            {% endfor %}
        {% endif %}
    </div>

    {% if body is defined %}
        <div class="blog-post-body">{{ body | raw }}</div>
    {% endif %}
</div>
